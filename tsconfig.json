{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "lib": ["es2021", "dom"],
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleDetection": "auto"
  },
  "include": ["src/**/*"]
}
