{
  "name": "neppayments",
  "version": "0.0.5",
  "description": "A Node.js package to easily integrate Nepali payment gateways like Khalti, eSewa, and Fonepay.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "neppayments": "./dist/setup-nep-payments.js"
  },
  "scripts": {
    "build": "tsc && node add-shebang.mjs",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "configure": "node dist/setup-nep-payments.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npx eslint .",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "nepal",
    "payment",
    "gateway",
    "khalti",
    "esewa",
    "fonepay",
    "nepali payments"
  ],
  "author": "Nischal Bhattarai <nishchalb21@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.9.36",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nischaljs/neppayments.git"
  },
  "bugs": {
    "url": "https://github.com/nischaljs/neppayments/issues "
  },
  "homepage": "https://github.com/nischaljs/neppayments #readme"
}
